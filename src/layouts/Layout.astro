---
import "@styles/style.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { ClientRouter  } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="nerometa.dev website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.bunny.net" />
		<link
			href="https://fonts.bunny.net/css?family=anuphan:400,500,600|jetbrains-mono:400,400i&display=swap"
			rel="preload"
			as="style"
			onload="this.onload=null;this.rel='stylesheet'"
		/>
		<noscript><link rel="stylesheet" href="https://fonts.bunny.net/css?family=anuphan:400,500,600|jetbrains-mono:400,400i&display=swap"></noscript>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate" type="application/rss+xml" title="blog.nerometa.dev" href={new URL("rss.xml", Astro.site)}/>
		<meta name="generator" content={Astro.generator} />
		<ClientRouter  />
		<title>{title ? `${title} | nerometa.dev` : "nerometa.dev"}</title>
		<script
			is:inline
			src="/lib/theme-utils.js"
			type="text/javascript"
			defer
		>
		</script>
	</head>
	<body>
		<div class="container">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>
