---
import { Icon } from "astro-icon/components";
---

<header>
	<a href={import.meta.env.BASE_URL}>Home</a>
	<nav>
		<ul>
			<li>
				<a href={import.meta.env.BASE_URL + "/blog"}>Blog</a>
			</li>
			<li>
				<a href={import.meta.env.BASE_URL + "/about"}>About</a>
			</li>
			<li>
				<a href={import.meta.env.BASE_URL + "/now"}>Now</a>
			</li>
			<li>
				<button id="theme-btn" onclick="togglePreference()">
					<Icon
						name="akar-icons:moon-fill"
						class="icon moon"
						width={18}
						height={18}
					/>
					<Icon
						name="akar-icons:sun-fill"
						class="icon sun"
						width={18}
						height={18}
					/>
				</button>
			</li>
		</ul>
	</nav>
</header>

<style>
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		padding-top: 1rem;
		height: 56px;
	}
	ul {
		display: flex;
		list-style-type: none;
		align-items: center;
		gap: 1rem;
		margin: 0;
		padding: 0;
	}
	li {
		margin: 0;
	}

	#theme-btn {
		display: flex;
		background: none;
		border: none;
		cursor: pointer;
		color: var(--text-color);
	}

	.sun {
		display: none;
	}

	.moon {
		display: block;
	}

	html[data-theme="dark"] .sun {
		display: block;
	}

	html[data-theme="dark"] .moon {
		display: none;
	}
</style>
